<section class="row">
  <h1 class="col-12 assignHead">Assignments</h1>
</section>

<section class="row assignRow">
  <section class="container offset-2 col-8">
    {{#each Assignments}}
    <div class="card">
      <section class="eachCard">
        <div class="card-header">
          <strong>{{this.title}}</strong>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            {{this.subject}}
          </h5>
          <p class="card-text">
            {{this.description}}
          </p>
          <button href="/" class="btn btn-primary">View Grades</button>
          <button href="/" class="btn btn-primary updateAssign" data-id="{{id}}" data-title="{{title}}">Update Assignment</button>
          <button  data-id="{{id}}" class="btn btn-primary del-btn">Delete Assignment</button>
        </div>
      </section>
    </div>
    {{/each}}
    <button id="addAssign" class="btn btn-primary mb-2">Create New Assignment</button>
    <div id="myModal" class="modal">
      {{!-- NOTES --}}
      {{!-- Look into error msg -- not sure how it exactly works --}}
      {{!-- Check/test link to signin at bottom of page --}}

      <!-- Insert navbar -->

      <div class="container">

        {{!-- Abacus animation --}}
        <center class="mt-5">
          <div class='abacus'>
            <div class='left'></div>
            <div class='right'></div>
            <div class='bar bar1'></div>
            <div class='bar bar2'></div>
            <div class='bar bar3'></div>
            <div class='block red1'></div>
            <div class='block red2'></div>
            <div class='block blue1'></div>
            <div class='block blue2'></div>
            <div class='block purple1'></div>
            <div class='block purple2'></div>
            <div class='block yellow1'></div>
            <div class='block yellow2'></div>
          </div>
        </center>

        <h2 class="text-center">Create an Assignment!</h2>

        <div class="row p-5">
          <div class="col-12">


            <form class="newAssign">

              {{!-- Title --}}
              <div class="form-group">
                <label for="inputTitle">Title</label>
                <input type="text" class="form-control" id="newAssignName" placeholder="Title">
              </div>
              {{!-- Description --}}
              <div class="form-group">
                <label for="inputDescription">Description</label>
                <input type="text" class="form-control" id="newAssignDescrip" placeholder="Description">
              </div>
              {{!-- Assignment Date --}}
              <div class="form-group">
                <label for="inputAssignDate">Assignment Date</label>
                <input type="text" class="form-control" id="newAssignDate" placeholder="YYYY-MM-DD">
              </div>
              {{!-- Due Date --}}
              <div class="form-group">
                <label for="inputDueDate">Due Date</label>
                <input type="text" class="form-control" id="newAssignDue" placeholder="YYYY-MM-DD">
              </div>
              {{!-- Subject --}}
              <div class="form-group">
                <label for="inputSubject">Subject</label>
                <input type="text" class="form-control" id="newAssignSubject" placeholder="Subject">
              </div>
              {{!-- Error message --}}
              <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Error:</span> <span class="msg"></span>
              </div>
              <button id="confirmAssign" class="btn btn-primary mb-2">Confirm</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</section>
